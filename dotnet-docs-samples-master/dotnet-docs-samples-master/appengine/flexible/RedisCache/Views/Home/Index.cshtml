@model RedisCache.ViewModels.WhoCount
    
<H1>Redis Incrementer Sample</H1>
@if (Model.MissingRedisEndpoint) 
{
    <p>Set the configuration variable RedisEndpoint to your Redis endpoint.</p>
    <p>See the README.md in the project directory for more information.</p>
}
else
{
    <p>
    Click the button to increment a counter in Redis.<br>
    Current count: <span id="CurrentCount">@Model.Count</span><br>
    Last incremented by: <span id="LastIncrementedBy">@Model.Who</span><br>
    </p>
    <form asp-controller="Home" asp-action="Index" id="WhoForm">
        <label for="who">Your name:</label>
        <input asp-for="Who" />
        <button id="Submit" type="submit">Increment</button>
    </form>
    <form method="POST" asp-controller="Home" asp-action="Reset">
        <button id="Reset" type="submit">Reset</button>
    </form>
}